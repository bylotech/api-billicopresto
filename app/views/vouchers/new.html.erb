<div class="home-organizer">

    <div class="mx-5" style="grid-column: 2">
      <%= form_with url: "/vouchers", method: :post, class: 'voucher_form' do |form| %>
        <!-- AMOUNT -->

        <div class="retailler-show-wrapper mx-5">

            <div class="retailler-show-info text-center align-middle p-4 py-5">
                <%= image_tag "calendar.svg", alt: "fb", class: "pb-3" %>
                <div class="d-flex justify-content-between align-items-baseline">
                    <p style="margin-right: 10px">DU</p>
                    <%= form.date_field "create[voucher][start_date]" , id: :start_date, required: true %>
                </div>
                <div class="d-flex justify-content-between align-items-baseline">
                    <p style="margin-right: 10px">AU</p>
                    <%= form.date_field "create[voucher][end_date]" , id: :end_date , required: true %>
                </div>
            </div>

            <div class="retailler-show-info text-center align-middle p-4 py-5">
                <%= image_tag "money.svg", alt: "fb", class: "pb-3" %>
                <div class="d-flex justify-content-between align-items-baseline">
                    <%= form.number_field "create[voucher][discount]", placeholder: '0.00', min: 0.01, step: 0.01 , id: :discount%>
                </div> 
                <p class="mt-3"> € de réduction</p>
            </div>

            <div class="retailler-show-info text-center align-middle p-4 py-5">
                <%= "coucou" if :kind == "Food and beverages" %>

                <p class="mb-3"> <%= form.label :product_id, I18n.t('vouchers.product') %> </p>
                <%= form.collection_select "create[voucher][product_id]", @products, :id, :name , include_hidden: false, id: :product , required: true%>
            </div>

        </div>

        <!-- TARGET -->
        <%= form.label :number, I18n.t('vouchers.discount') %>
        <%= form.number_field "create[target][number]", placeholder: '0.00' , required: true%>
        <%= form.label :desc, I18n.t('vouhers.consumers.biggest') %>
        <input type="radio" value="desc" name="create[target][order]" id="desc" , required: true>
        <%= form.label :asc, I18n.t('vouhers.consumers.smallest') %>
        <input type="radio" value="asc" name="create[target][order]" id="asc", required: true >
        <%= form.label :target_product, I18n.t('vouchers.discount') %>
        <%= form.collection_select "create[target][product_id]", @product_sold, :id, :name , include_hidden: false, id: :target_product , required: true%>
        <%= form.submit I18n.t('vouchers.submit')%>

      <% end %>
      
    </div>

</div>
