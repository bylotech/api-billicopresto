      else
        'display: none !important'
      end 
    end  
%>

<div class="footer d-flex" style="<%= display %> ">
	<%= link_to receipts_index_path do %>
		<i class="fas fa-chart-pie"></i>
	<% end %>
	<%= link_to receipts_index_path do %>
		<i class="far fa-list-alt"></i>
	<% end %>
	<%= link_to receipts_index_path do %>
		<i class="fas fa-qrcode"></i>
	<% end %>
	<%= link_to receipts_index_path do %>
